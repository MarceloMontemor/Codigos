<?php 

// Entrada de dados
$string = readline('Digite a string que deseja invertar: ');

// Variável que armazenará a string invertida
$stringInvertida = '';

// Invertendo a string
for ($i = strlen($string) - 1; $i >= 0; $i--) {
	$stringInvertida .= $string[$i];
}

// Exibindo a string invertida
echo $stringInvertida;

?>
